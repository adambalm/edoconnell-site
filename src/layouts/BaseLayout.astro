---
import { loadQuery } from '../sanity/lib/load-query'
import { VisualEditing } from '@sanity/astro/visual-editing'
import Analytics from '@vercel/analytics/astro'
import Header from '../components/Header.astro'

const visualEditingEnabled = import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === 'true'

interface Props {
  title: string
  description?: string
  ogImage?: string
}

let settings = {
  siteTitle: "Ed O'Connell",
  siteDescription: "Portfolio of Ed O'Connell: AI demos, structured content systems, and essays on language, institutions, and digital infrastructure.",
  noindex: true,
  seo: null as { metaTitle?: string; metaDescription?: string; ogImage?: { asset?: { url?: string } } } | null,
}
try {
  const { data } = await loadQuery<typeof settings>({
    query: `*[_type == "siteSettings"][0]{
      siteTitle,
      siteDescription,
      noindex,
      seo { metaTitle, metaDescription, ogImage { asset->{ url } } }
    }`,
  })
  if (data) settings = data
} catch (e) {
  console.warn('[BaseLayout] Sanity fetch failed — using fallback settings:', e instanceof Error ? e.message : e)
}

const currentPath = Astro.url.pathname
const { title, description = settings.siteDescription, ogImage } = Astro.props
const pageTitle = title === 'Home' ? settings.siteTitle : `${title} — ${settings.siteTitle}`
const robotsContent = settings.noindex === false ? 'index, follow' : 'noindex'
const resolvedOgImage = ogImage ?? settings.seo?.ogImage?.asset?.url
const ogTitle = pageTitle
const ogDescription = description
const canonicalUrl = new URL(currentPath, Astro.site ?? 'https://edoconnell.org').href
const twitterCard = resolvedOgImage ? 'summary_large_image' : 'summary'
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      (function() {
        var t = localStorage.getItem('theme');
        if (t === 'dark' || t === 'light') {
          document.documentElement.setAttribute('data-theme', t);
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.setAttribute('data-theme', 'dark');
        }
      })();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content={robotsContent} />
    <meta name="description" content={description} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={settings.siteTitle} />
    {ogDescription && <meta property="og:description" content={ogDescription} />}
    {resolvedOgImage && <meta property="og:image" content={resolvedOgImage} />}
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:title" content={ogTitle} />
    {ogDescription && <meta name="twitter:description" content={ogDescription} />}
    {resolvedOgImage && <meta name="twitter:image" content={resolvedOgImage} />}
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;1,8..60,400&display=swap" rel="stylesheet" />
    <script is:inline>
      if (new URLSearchParams(window.location.search).has('notrack')) {
        localStorage.setItem('notrack', '1');
      }
      window.webAnalyticsBeforeSend = function(event) {
        if (localStorage.getItem('notrack')) return null;
        return event;
      };
    </script>
    <Analytics />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>

    <Header siteTitle={settings.siteTitle} currentPath={currentPath} />

    <main id="main" tabindex="-1">
      <slot />
    </main>

    <footer role="contentinfo">
      <p>&copy; {new Date().getFullYear()} {settings.siteTitle}</p>
    </footer>

    {visualEditingEnabled && <VisualEditing enabled={true} />}
  </body>
</html>

<style>
  @import '../styles/global.css';

  main {
    max-width: var(--page-max);
    margin: 0 auto;
    padding: var(--space-12) var(--page-gutter);
  }

  main:focus {
    outline: none;
  }

  footer {
    padding: var(--space-8) var(--page-gutter);
    border-top: 1px solid var(--color-border);
    text-align: center;
    font-family: var(--font-ui);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }
</style>
