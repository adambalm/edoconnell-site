---
/**
 * DemoMeta — renders epistemic and provenance metadata from Sanity.
 *
 * Server-rendered (not inside the React island) so metadata is visible
 * even if JavaScript fails. The Sanity demoItem schema carries provenance
 * as structured data — this component makes it presentational.
 */
interface Props {
  demo: {
    epistemicStatus?: string
    publicationReadiness?: string
    audienceContext?: string
    provenance?: {
      author?: string
      generatedBy?: string
      reviewedBy?: string
      context?: string
      date?: string
      confidenceScore?: number
    }
    tags?: string[]
  }
}

const { demo } = Astro.props
const prov = demo.provenance

const statusLabels: Record<string, string> = {
  draft: 'Draft',
  working: 'Working',
  reviewed: 'Reviewed',
  canonical: 'Canonical',
}
---

<aside class="demo-meta" aria-label="Demo metadata">
  {demo.epistemicStatus && (
    <div class="meta-row">
      <span class={`badge badge--${demo.epistemicStatus}`}>
        {statusLabels[demo.epistemicStatus] || demo.epistemicStatus}
      </span>
    </div>
  )}

  {demo.audienceContext && (
    <div class="meta-row">
      <dt>Audience</dt>
      <dd>{demo.audienceContext}</dd>
    </div>
  )}

  {prov && (
    <dl class="provenance">
      {prov.generatedBy && (
        <>
          <dt>Generated by</dt>
          <dd>{prov.generatedBy}</dd>
        </>
      )}
      {prov.author && (
        <>
          <dt>Author</dt>
          <dd>{prov.author}</dd>
        </>
      )}
      {prov.reviewedBy && (
        <>
          <dt>Reviewed by</dt>
          <dd>{prov.reviewedBy}</dd>
        </>
      )}
      {prov.context && (
        <>
          <dt>Context</dt>
          <dd>{prov.context}</dd>
        </>
      )}
      {prov.date && (
        <>
          <dt>Date</dt>
          <dd>{prov.date}</dd>
        </>
      )}
      {prov.confidenceScore != null && (
        <>
          <dt>Confidence</dt>
          <dd>{Math.round(prov.confidenceScore * 100)}%</dd>
        </>
      )}
    </dl>
  )}

  {demo.tags && demo.tags.length > 0 && (
    <ul class="tags" aria-label="Tags">
      {demo.tags.map((tag: string) => <li>{tag}</li>)}
    </ul>
  )}
</aside>

<style>
  .demo-meta {
    margin-bottom: var(--space-6, 1.5rem);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-muted, #555);
  }

  .meta-row {
    margin-bottom: var(--space-2, 0.5rem);
  }

  .meta-row dt {
    display: inline;
    font-weight: 600;
  }

  .meta-row dt::after {
    content: ': ';
  }

  .meta-row dd {
    display: inline;
    margin: 0;
  }

  .badge {
    display: inline-block;
    padding: 0.15em 0.6em;
    font-size: var(--font-size-xs, 0.8rem);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 3px;
  }

  .badge--draft {
    background: #f3f4f6;
    color: #6b7280;
  }

  .badge--working {
    background: #dbeafe;
    color: #1e40af;
  }

  .badge--reviewed {
    background: #dcfce7;
    color: #166534;
  }

  .badge--canonical {
    background: #fef3c7;
    color: #92400e;
  }

  .provenance {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.25rem 0.75rem;
    margin: var(--space-3, 0.75rem) 0;
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    background: var(--color-bg-subtle, #f0efe9);
    border-left: 3px solid var(--color-border, #d4d0c8);
  }

  .provenance dt {
    font-weight: 500;
    color: var(--color-text-muted, #555);
  }

  .provenance dd {
    margin: 0;
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: var(--space-3, 0.75rem) 0 0 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .tags li {
    padding: 0.15em 0.5em;
    background: var(--color-bg-subtle, #f0efe9);
    border: 1px solid var(--color-border, #d4d0c8);
    border-radius: 3px;
    font-size: var(--font-size-xs, 0.8rem);
  }
</style>
