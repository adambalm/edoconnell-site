---
/**
 * DemoMeta â€” renders provenance, audience, and tag metadata from Sanity.
 *
 * Governance badges (epistemicStatus, publicationReadiness) and
 * confidenceScore are kept in the schema for editorial workflow but
 * not displayed on the public page.
 *
 * Server-rendered (not inside the React island) so metadata is visible
 * even if JavaScript fails.
 */
interface Props {
  demo: {
    audienceContext?: string
    provenance?: {
      author?: string
      generatedBy?: string
      reviewedBy?: string
      context?: string
      date?: string
    }
    tags?: string[]
  }
}

const { demo } = Astro.props
const prov = demo.provenance
---

<aside class="demo-meta" aria-label="Demo metadata">
  {demo.audienceContext && (
    <dl class="meta-row">
      <dt>Audience</dt>
      <dd>{demo.audienceContext}</dd>
    </dl>
  )}

  {prov && (
    <dl class="provenance">
      {prov.generatedBy && (
        <>
          <dt>Generated by</dt>
          <dd>{prov.generatedBy}</dd>
        </>
      )}
      {prov.author && (
        <>
          <dt>Author</dt>
          <dd>{prov.author}</dd>
        </>
      )}
      {prov.reviewedBy && (
        <>
          <dt>Reviewed by</dt>
          <dd>{prov.reviewedBy}</dd>
        </>
      )}
      {prov.context && (
        <>
          <dt>Context</dt>
          <dd>{prov.context}</dd>
        </>
      )}
      {prov.date && (
        <>
          <dt>Date</dt>
          <dd>{prov.date}</dd>
        </>
      )}
    </dl>
  )}

  {demo.tags && demo.tags.length > 0 && (
    <ul class="tags" aria-label="Tags">
      {demo.tags.map((tag: string) => <li>{tag}</li>)}
    </ul>
  )}
</aside>

<style>
  .demo-meta {
    margin-bottom: var(--space-6, 1.5rem);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-muted, #555);
  }

  .meta-row {
    margin-bottom: var(--space-2, 0.5rem);
  }

  .meta-row dt {
    display: inline;
    font-weight: 600;
  }

  .meta-row dt::after {
    content: ': ';
  }

  .meta-row dd {
    display: inline;
    margin: 0;
  }

  .provenance {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.25rem 0.75rem;
    margin: var(--space-3, 0.75rem) 0;
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    background: var(--color-bg-subtle, #f0efe9);
    border-left: 3px solid var(--color-border, #d4d0c8);
  }

  .provenance dt {
    font-weight: 500;
    color: var(--color-text-muted, #555);
  }

  .provenance dd {
    margin: 0;
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: var(--space-3, 0.75rem) 0 0 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .tags li {
    padding: 0.15em 0.5em;
    background: var(--color-bg-subtle, #f0efe9);
    border: 1px solid var(--color-border, #d4d0c8);
    border-radius: 3px;
    font-size: var(--font-size-xs, 0.8rem);
  }
</style>
