---
/**
 * ArticleMeta â€” renders provenance and audience metadata for articles.
 *
 * Governance badges (kind, epistemicStatus, publicationReadiness) and
 * confidenceScore are kept in the schema for editorial workflow but
 * not displayed on the public page.
 */
interface Props {
  article: {
    audienceContext?: string
    provenance?: {
      author?: string
      generatedBy?: string
      reviewedBy?: string
      context?: string
      date?: string
    }
  }
}

const { article } = Astro.props
const prov = article.provenance
---

<aside class="article-meta" aria-label="Article metadata">
  {article.audienceContext && (
    <p class="meta-audience">{article.audienceContext}</p>
  )}

  {prov && (
    <dl class="provenance">
      {prov.author && (
        <>
          <dt>Author</dt>
          <dd>{prov.author}</dd>
        </>
      )}
      {prov.generatedBy && (
        <>
          <dt>Drafted with</dt>
          <dd>{prov.generatedBy}</dd>
        </>
      )}
      {prov.reviewedBy && (
        <>
          <dt>Reviewed by</dt>
          <dd>{prov.reviewedBy}</dd>
        </>
      )}
      {prov.context && (
        <>
          <dt>Context</dt>
          <dd>{prov.context}</dd>
        </>
      )}
      {prov.date && (
        <>
          <dt>Date</dt>
          <dd>{prov.date}</dd>
        </>
      )}
    </dl>
  )}
</aside>

<style>
  .article-meta {
    margin-bottom: var(--space-8, 2rem);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-muted, #555);
  }

  .meta-audience {
    font-style: italic;
    line-height: var(--leading-normal, 1.6);
    margin: 0;
  }

  .provenance {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.25rem 0.75rem;
    margin-top: var(--space-3, 0.75rem);
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    background: var(--color-bg-subtle, #f0efe9);
    border-left: 3px solid var(--color-border, #d4d0c8);
  }

  .provenance dt {
    font-weight: 500;
    color: var(--color-text-muted, #555);
  }

  .provenance dd {
    margin: 0;
  }
</style>
